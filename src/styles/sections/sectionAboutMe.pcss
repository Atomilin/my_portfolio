.content_info {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.content_info__pic {
    flex-shrink: 0;
    border-radius: 50%;
    overflow: hidden;
	width: 200px;
	height: 200px;
	margin-bottom: 80px;
}

.content_info__disc {
    display:flex;
    flex-direction:column;
}

.discription {
    display: flex;
    flex-direction:row;
}

.discription__left {
    width:90px;
    margin-right: 82px;
    font-size: 16px;
    line-height: 1.88;
    text-align: left;
    color: rgba(255, 255, 255, 0.15);
}

.discription__right {
    font-size: 16px;
    line-height: 1.88;
    text-align: left;
    color: #ffffff;
}

.star {
    width: 22px;
    height: 22px;
    font-size: 48px;
    font-style: italic;
    line-height: 0.63;
    color: rgba(219, 2, 0, 0.1);
}