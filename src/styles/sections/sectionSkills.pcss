.skill__circle-shape {

}

.skill__circle {
    fill: transparent;
    &_under {
      stroke: #eaeaea;
      stroke-width: 1px;
    }
    &_above {
      stroke: orange;
      stroke-width: 6px;
      stroke-dasharray: 251;
      stroke-dashoffset: 100;
    }
}

.skill__circle-text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-weight: bold;
    font-size: 18px;
    color: rgba(255, 255, 255, 0.5);
    padding: 14px;
  
    @include phones {
      font-size: 16px;
    }
  }