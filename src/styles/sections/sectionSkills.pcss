.percentage {
    width: 135px;
    height: 135px;
    transform: rotate(-180deg);

    @include desktop {

	}
	@include tablets {
        width: 112px;
        height: 112px;
	}
	
	@include phones {
	
	}
}

.skill__circle {
    fill: transparent;
    stroke-width: 1px;
    stroke: #e9e9e9;
}

.skill__circle--under {

}

.skill__circle--above {
    stroke: orange;
    stroke-dasharray: 251;
    stroke-dashoffset: 251;
    animation: fill 100s linear infinite;
    animation-play-state: paused;
    stroke-width: 6px;

}

    @keyframes fill {
        from {
            stroke-dashoffset: 251;
        }

        to {
            stroke-dashoffset: 0;
        }

    }
.skill__circle--above[style="animation-delay: -100s"] {
    stroke-dashoffset: 0;
    animation: initial;
}

