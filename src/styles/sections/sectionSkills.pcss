    @include phones {
        justify-content: center;
    }
}
.content__skills {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: row;
    padding-top: 150px;

    @include tablets {
        flex-direction: column-reverse;
        margin: 0 auto;
        padding-top: 119px;
    }

    @include phones {
        flex-direction:column-reverse;
        padding-top:97px;
        width: 266px;
        align-items: center;
    }
}

// изображение
.skills-left {
    flex-shrink:0;

    @include desktop {
        flex-shrink: 1;
    }
    
	@include tablets {
        width: 486px;
        height: 486px;
        transform: rotate(-90deg) translateY(-25%);
    }
    
    @include phones {
        width: 212px;
        height: 212px;
        transform: rotate(-90deg) translateY(-25%);
