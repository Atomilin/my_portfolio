// меню для адаптива

.header__links {
	display: flex;
	align-items: center;
}

.menu-link {
	display: none;

	@include tablets {
		display: flex;
		vertical-align: middle;
		position: relative;
		height: 22px;
		align-items: center;
		margin-left: 90px;
		margin-right: 40px;
	}

	@include phones {
		display: flex;
		vertical-align: middle;
		position: relative;
		height: 22px;
		align-items: center;
		margin-left: 30px;
		margin-right: 24px;
	}
}

.menu-link__bars {
	&, &:before, &:after {
		background: #fff;
		width: 24px;
		height: 5px;
		border-radius: 3px;
	}

	&:before, &:after {
		content: "";
		display: block;
		position: absolute;
	}

	&:before {
		top: 0;
	}

	&:after {
		bottom: 0;
	}
}